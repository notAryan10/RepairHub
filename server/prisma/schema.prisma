generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum UserRole {
  STUDENT
  WARDEN
  STAFF
  TECHNICIAN
}

enum IssueCategory {
  PLUMBING
  ELECTRICAL
  FURNITURE
  WIFI
  OTHER
}

enum IssueStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum FeedbackStatus {
  SATISFIED
  NOT_SATISFIED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole
  roomNumber    String?   
  block         String?   
  phoneNumber   String?
  fcmToken      String?   
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  reportedIssues     Issue[]        @relation("ReportedBy")
  assignedIssues     Issue[]        @relation("AssignedTo")
  notifications      Notification[]
  feedbacksGiven     Feedback[]
  appFeedbacks       AppFeedback[]
  partsRequests      PartsRequest[]  @relation("PartsRequestedBy")
  timeLogs           TimeLog[]       @relation("TimeLoggedBy")

  @@index([email])
}

model Issue {
  id          String        @id @default(uuid())
  title       String
  description String        @db.Text
  category    IssueCategory
  status      IssueStatus  @default(PENDING)
  roomNumber  String
  block       String
  priority    Int          @default(1) 
  isRecurring Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  scheduledDate DateTime?

  reportedBy      User          @relation("ReportedBy", fields: [reportedById], references: [id])
  reportedById    String
  assignedTo      User?         @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId    String?
  statusUpdates   StatusUpdate[]
  feedback        Feedback?
  notifications   Notification[]
  images          IssueImage[]
  partsRequests   PartsRequest[]
  timeLogs        TimeLog[]

  @@index([status])
  @@index([category])
  @@index([roomNumber, block])
}

model StatusUpdate {
  id        String   @id @default(uuid())
  status    IssueStatus
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  issue     Issue    @relation(fields: [issueId], references: [id])
  issueId   String

  @@index([issueId])
}

model Feedback {
  id        String         @id @default(uuid())
  status    FeedbackStatus
  comment   String?        @db.Text
  createdAt DateTime       @default(now())


  issue     Issue          @relation(fields: [issueId], references: [id])
  issueId   String        @unique
  user      User          @relation(fields: [userId], references: [id])
  userId    String

  @@index([userId])
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    String
  issue     Issue?   @relation(fields: [issueId], references: [id])
  issueId   String?

  @@index([userId])
  @@index([issueId])
}

model IssueImage {
  id        String   @id @default(uuid())
  url       String   @db.Text
  createdAt DateTime @default(now())

  issue     Issue    @relation(fields: [issueId], references: [id])
  issueId   String

  @@index([issueId])
}

enum PartsRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model PartsRequest {
  id          String             @id @default(uuid())
  partName    String
  quantity    Int
  description String?            @db.Text
  status      PartsRequestStatus @default(PENDING)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  issue         Issue   @relation(fields: [issueId], references: [id])
  issueId       String
  requestedBy   User    @relation("PartsRequestedBy", fields: [requestedById], references: [id])
  requestedById String

  @@index([issueId])
  @@index([requestedById])
  @@index([status])
}

model TimeLog {
  id            String    @id @default(uuid())
  startTime     DateTime
  endTime       DateTime?
  duration      Int?      
  notes         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  issue         Issue     @relation(fields: [issueId], references: [id])
  issueId       String
  technician    User      @relation("TimeLoggedBy", fields: [technicianId], references: [id])
  technicianId  String

  @@index([issueId])
  @@index([technicianId])
}

model AppFeedback {
  id        String   @id @default(uuid())
  category  String  
  subject   String
  message   String   @db.Text
  rating    Int?     
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@index([userId])
  @@index([category])
}